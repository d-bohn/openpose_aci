BOOTSTRAP: docker
FROM: dalbohn/openpose_aci:gpu

%labels
MAINTAINER Daniel Albohn <d.albohn@gmail.com>

%runscript
    cd /opt/openpose
    exec /build/examples/openpose/openpose.bin "$@"

%post
